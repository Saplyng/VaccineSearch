<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/textBox1"
            android:layout_width="170dp"
            android:layout_height="28dp"
            android:id="@+id/textView2"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView3" android:gravity="center_vertical|center_horizontal"/>
    <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/idDateOfBirth"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:selectAllOnFocus="true"
            android:hint="@string/dateHint" android:gravity="center_vertical|center_horizontal"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/textBox2"
            android:layout_width="170dp"
            android:layout_height="28dp"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.909" android:textSize="18sp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:gravity="right|center"/>
    <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/idVaccineDate"
            android:text=""
            android:hint="@string/dateHint"
            android:gravity="center_vertical|center_horizontal" android:selectAllOnFocus="true"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/idDateOfBirth" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/idVaccineDate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:text="@string/calculateButton"
            app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:id="@+id/idInformation" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/idButton" android:textSize="18sp"/>
    <TextView
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:id="@+id/idInformation2"
            app:layout_constraintTop_toBottomOf="@+id/idInformation" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5" android:textSize="18sp"/>
    <TextView
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:id="@+id/idInformation3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/idInformation2" app:layout_constraintHorizontal_bias="0.5"
            android:textSize="18sp"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier" app:barrierDirection="top"/>
    <android.support.constraint.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:id="@+id/group"/>
    <ImageView
            android:layout_width="363dp"
            android:layout_height="123dp" app:srcCompat="@drawable/ic_miracle_medecine"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:contentDescription="TODO"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_search"
            android:id="@+id/idButtonNext" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/idInformation3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.974"/>
</android.support.constraint.ConstraintLayout>